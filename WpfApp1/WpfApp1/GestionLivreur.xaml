            <Button Content="ordre decroissant sur id" Canvas.Left="191" Canvas.Top="232" Width="143" Click="Button_Click_3"/>
            <Button Content="ordre croissant nom" Canvas.Left="13" Canvas.Top="257" Width="143" Click="Button_Click_4"/>
            <Button Content="ordre decroissant nom" Canvas.Left="191" Canvas.Top="257" Width="143" Click="Button_Click_5"/>
        </Canvas>
        <ListBox x:Name="affichage" SelectionChanged="Affichage_SelectionChanged" HorizontalAlignment="Left" Height="140" Margin="10,81,0,0" VerticalAlignment="Top" Width="330"/>

    </Grid>

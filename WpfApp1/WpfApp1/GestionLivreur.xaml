            <Label Content="Prénom" Canvas.Left="392" Canvas.Top="136"/>
            <Label Content="Numéro" Canvas.Left="395" Canvas.Top="194"/>
            <Label Content="Type de Véhicule" Canvas.Left="392" Canvas.Top="257" RenderTransformOrigin="0.262,1.747"/>
            <Button x:Name="bouttonLivreur" Content="Créer Livreur" Height="22" Canvas.Left="395" Canvas.Top="330" Width="133" Click="Button_Click_6"/>

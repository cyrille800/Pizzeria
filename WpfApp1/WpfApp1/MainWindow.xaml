<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Welcome" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        >

    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="Img_Fond" ImageSource="firstPage.jpg" Stretch="Fill" TileMode="None" />
        </Grid.Background>
        
        <Button x:Name="update" 
                Background="Transparent"
                Cursor="Hand"
                BorderBrush="Transparent"
                Style="{StaticResource btnBlue}" 
                Content=""
                Click="Update_Click"
                MouseEnter="Update_MouseEnter" 
                MouseLeave="Update_MouseLeave"
                RenderTransformOrigin="0.592,0.758" Margin="219,421,885.6,0" Height="49" VerticalAlignment="Top" >
        </Button>
    </Grid>
</Window>
